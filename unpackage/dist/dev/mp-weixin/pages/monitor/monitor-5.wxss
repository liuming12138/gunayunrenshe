.app-1 {
  width: 669rpx;
  height: 190rpx;
  background: white;
  box-shadow: 0px 15rpx 50rpx 0px rgba(9, 9, 53, 0.07);
  border-radius: 10rpx;
  margin: 40rpx auto 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.app-1 > view {
  -webkit-box-flex: 1;
