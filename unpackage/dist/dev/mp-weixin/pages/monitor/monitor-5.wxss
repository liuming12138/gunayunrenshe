          flex: 1;
  text-align: center;
}
.app-1 > view .on {
  color: #2c3240;
}
.app-1 > view text {
  color: #999;
  font-size: 24rpx;
}
.app-1 > view view {
  height: 70rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
