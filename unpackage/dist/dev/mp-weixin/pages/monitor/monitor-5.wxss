.app-2 {
  width: 669rpx;
  margin: 20rpx auto 0;
  padding: 40rpx 40rpx 120rpx;
  box-sizing: border-box;
  background: white;
  box-shadow: 0px 15rpx 50rpx 0px rgba(9, 9, 53, 0.07);
  border-radius: 10rpx 10rpx 0 0;
}
.app-2 > text {
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #2c3240;
}
.app-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 37rpx 0 30rpx;
  text-align: center;
}
.app-item text {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  display: inline-block;
  margin-top: 30rpx;
  color: #646c7f;
}
.app-item > view {
  width: 260rpx;
  position: relative;
}
.app-item > view image {
  width: 100%;
  height: 167rpx;
  object-fit: cover;
  border-radius: 10rpx;
}
.app-item > view button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 167rpx;
  z-index: 5;
  opacity: 0;
}
.btn {
  padding: 300rpx 0 120rpx;
}
.btn view {
  height: 90rpx;
  background: -webkit-linear-gradient(right, #3497fd 0%, #347bfd 100%);
  background: linear-gradient(270deg, #3497fd 0%, #347bfd 100%);
  border-radius: 45rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: white;
  text-align: center;
  line-height: 90rpx;
}
